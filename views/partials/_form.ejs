<form action="/api/contactlist" class="mb-5" method="POST" id="add_contact">
  <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" name="name" required>
    </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" required>
  </div>
  <div class="form-group">
    <label>Contact Number</label>
    <input type="tel" class="form-control" name="number" required>
  </div>
  <div class="form-group">
      <button type="submit" class="btn bgstandardcolor text-light" style="margin-top: 10px;">Save</button>
  </div>
</form>